  "description": "Method input",
  "license": "MIT",
  "author": "Method",
  "repository": {
    "type": "git",
    "url": "https://github.com/method-inc/rnr-method.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
