    "@types/react-native-web": "^0.19.0",
    "autoprefixer": "10.4.15",
    "postcss": "8.4.30",
    "react": "18.3.1",
    "react-native": "0.76.3",
    "tailwindcss": "3.3.3",
    "tsup": "^8.1.0"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-web": "*"
  },
